{
  "compilerOptions": {
    "outDir": "build",
    "target": "es6",
    "module": "commonjs",
    "lib": ["ES6"],
    "strict": true,
    "declaration": true,
    "allowJs": true,
    "removeComments": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    
  },
  "include": [
    "src"
  ]
}
