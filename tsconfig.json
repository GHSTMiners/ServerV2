{
  "compilerOptions": {
    "outDir": "build",
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es6"],
    "strict": true,
    "declaration": true,
    "allowJs": true,
    "removeComments": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    
  },
  "include": [
    "src"
  ]
}
